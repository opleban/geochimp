<div class="content_container">
  <h1>GeoMonkey</h1>

  <div id="map"></div>
  <div id="info_container">
    <div id="surveys_container" class="float_left span_3_of_9">
      <h2>Surveys</h2>
      <% if @surveys %>
      <ul class='survey_list'>
        <% @surveys.each do |survey| %>
        <li class="survey" id="<%= survey.id %>">
          <%= survey.title %>
        </li>
        <% end %>
      </ul>
      <% end %>
    </div>
    <div id="questions_container" class="float_right span_3_of_9">
    </div>
    <div id="responses_container" class="float_right span_3_of_9">
    </div>
  </div>
</div>
<script type="text/template" id="question-list-template">
  <h2>Questions</h2>
  <ul class='question_list'>
    {{~it.questions :value:index}}
       <li class="question" id="{{=value.id}}">
        {{=value.content}}
      </li>
    {{~}}
  </ul>
</script>
<script type="text/template" id="response-list-template">
  <h2>Responses</h2>
  <ul class='response_list'>
    {{~it.responses :value:index}}
      <li id="response-{{=value.id}}" class="response">
        Name: {{=value.user.name}} </br>
        Response: {{=value.content}}
      </li>
    {{~}}
  </ul>
</script>